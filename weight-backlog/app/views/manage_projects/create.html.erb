<h1>create project</h1>
<p>register slogan, due date, target weight and current weight.</p>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@project, url: 'create') do |f| %>
        <div class="row">
            <div class="col-md-12">
                <%= f.label :project_name %>
                <%= f.text_field :project_name, class: 'form-control' %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <%= f.label :target_date %>
                <%= f.date_select :target_date, class: 'form-control' %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label>Current Weight</label>
                <%= number_field_tag :current_weight,current_user.weight, step: 0.1, class: 'form-control' %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <%= f.label :target_weight %>
                <%= f.number_field :target_weight, class: 'form-control', step: 0.1 %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <%= f.submit "Register", class: "btn btn-primary" %>
            </div>
        </div>
        <% end %>
    </div>
</div>
