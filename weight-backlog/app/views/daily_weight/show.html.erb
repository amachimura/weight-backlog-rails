<h1>今日の体重</h1>
<p>今日の体重を記録しましょう</p>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@daily_weight, url: 'record') do |f| %>
        <div class="row">
            <%= f.label '日付' %>
            <% time = @daily_weight.date %>
            <%= time.strftime('%Y年%m月%d日') %>
        </div>
        <div class="hidden_fields">
          <%= f.hidden_field :date, value: time %>
          <%= f.hidden_field :sprint_id, value: @daily_weight.sprint_id %>
          <%= f.hidden_field :user_id, value: @daily_weight.user_id %>
        </div>
        <div class="row">
            <%= f.label '体重' %>
            <%= f.number_field :weight, step: 0.1 %>
        </div>
        <div class="row">
            <%= f.submit "記録する", class: "btn btn-primary" %>
        </div>
        <% end %>
    </div>
</div>
