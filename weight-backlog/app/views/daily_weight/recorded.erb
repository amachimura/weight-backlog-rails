<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>recorded daily weight</h2>
      <div class="row">
        <label>sprint due date：</label>
        <%= @sprint.target_date %>
      </div>
      <div class="row">
        <label>current weight：</label>
        <%= @daily_weight.weight %>
        <label>kg</label>
      </div>
      <div class="row">
        <% remaining = @daily_weight.weight - @sprint.target_weight %>
        <label>remaining:</label>
        <%= remaining %><label>kg</label>
      </div>
    </div>
</div>
